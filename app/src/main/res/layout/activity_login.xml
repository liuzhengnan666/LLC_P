<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@color/black"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/im_user"
            android:src="@mipmap/my"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <EditText
            android:textColorHint="@color/navigation"
            android:hint="请输入用户名"
            android:inputType="text"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/im_user"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/im_user"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/im_password"
            android:src="@mipmap/password"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <EditText
            android:textColorHint="@color/navigation"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/im_password"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/im_password"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_login"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_cir_gay"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/llc_system_text_size"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_register"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/llc_system_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/llc_system_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>