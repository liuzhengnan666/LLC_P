<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/im_basics_host"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/host_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/im_basics_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/basics_host"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="基础矿机"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/basics_host_mill"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/basics_host"
                android:text="算力:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/basics_host_mill"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/basics_host"
                android:text="0MB"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@color/check_out"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/im_cascade_host"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/host_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/im_cascade_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cascade_host"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="级联矿机"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cascade_host_mill"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/cascade_host"
                android:text="算力:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/cascade_host_mill"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/cascade_host"
                android:text="0MB"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@color/check_out"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>