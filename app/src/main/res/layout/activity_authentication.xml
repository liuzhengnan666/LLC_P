<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context=".activity.AuthenticationActivity">

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/title_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_centerVertical="true"
            android:id="@+id/f_back"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:layout_gravity="center"
                android:background="@mipmap/back"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </FrameLayout>

        <TextView
            android:layout_centerInParent="true"
            android:text="实名认证"
            android:textColor="@color/white"
            android:textSize="@dimen/llc_system_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/name"
            android:textColor="@color/white"
            android:textSize="@dimen/llc_system_text_size"
            android:text="姓名:"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:theme="@style/UpdateUserEditText"
            android:layout_toRightOf="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/id_card"
            android:textColor="@color/white"
            android:textSize="@dimen/llc_system_text_size"
            android:text="身份证:"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/white"
            android:theme="@style/UpdateUserEditText"
            android:layout_toRightOf="@+id/id_card"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="上传身份证照片"
        android:textColor="@color/white"
        android:textSize="@dimen/llc_system_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="true"
            android:id="@+id/im_card_front"
            android:src="@mipmap/upload"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/im_card_front"
            android:textSize="15sp"
            android:text="身份证正面"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/im_card_reverse"
                android:src="@color/white"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/im_card_reverse"
                android:textSize="15sp"
                android:text="身份证反面"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_cir_gay"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="上传资料"
        android:textColor="@color/white"
        android:textSize="@dimen/llc_system_text_size"
        android:layout_width="match_parent"
        android:layout_height="35dp" />
</LinearLayout>